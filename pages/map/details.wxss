/* 留言部分 */
.message-section {
  margin-top: 20px;
}

.message-list {
  margin-bottom: 20px;
}

.message-item {
  margin-bottom: 10px;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.message-header {
  font-weight: bold;
}

.message-content {
  margin-top: 5px;
}

.message-time {
  font-size: 12px;
  color: #999;
}

.input-container {
  display: flex;
  justify-content: space-between;
}

.message-input {
  width: 80%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.send-button {
  width: 15%;
  padding: 10px;
  background-color: #1c74e2;
  color: white;
  border-radius: 5px;
  border: none;
}
