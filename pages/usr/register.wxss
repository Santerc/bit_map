/* 主容器 */
.form-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f7f7f7; /* 微信风格浅灰背景 */
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05); /* 添加轻微阴影 */
  margin: 50rpx auto;
  width: 90%;
}
/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}
/* 输入框 */
.input {
  width: 100%; /* 全宽 */
  height: 88rpx; /* 微信输入框标准高度 */
  margin-bottom: 30rpx; /* 控件间距 */
  padding: 0 20rpx; /* 内边距 */
  font-size: 28rpx; /* 字体大小 */
  border: 1px solid #e5e5e5; /* 浅灰边框 */
  border-radius: 12rpx; /* 圆角边框 */
  background-color: #fff; /* 白色背景 */
  box-sizing: border-box; /* 包括内边距 */
  color: #333; /* 默认字体颜色 */
  outline: none; /* 去除输入框默认边框 */
}

/* 主按钮 */
.btn-primary {
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #1aad19; /* 微信绿色 */
  border-radius: 12rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(26, 173, 25, 0.3); /* 轻微阴影 */
}

/* 次按钮 */
.btn-secondary {
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  color: #1aad19;
  background-color: #fff;
  border: 1px solid #1aad19;
  border-radius: 12rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 20rpx;
}

/* 按钮点击效果 */
.btn-primary:active,
.btn-secondary:active {
  opacity: 0.8; /* 点击时的透明效果 */
}
