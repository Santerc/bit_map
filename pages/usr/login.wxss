/* pages/usr/login.wxss */
/* 主容器 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  background-color: #f7f7f7; /* 浅灰背景 */
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05); /* 轻微阴影 */
  margin: 80rpx auto;
  width: 90%;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

/* 输入框组 */
.input-group {
  width: 100%;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 88rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1px solid #e5e5e5;
  border-radius: 12rpx;
  background-color: #fff;
  box-sizing: border-box;
  color: #333;
  outline: none;
}

/* 主按钮 */
.btn-primary {
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #1aad19; /* 微信绿色 */
  border-radius: 12rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(26, 173, 25, 0.3); /* 按钮阴影 */
}

/* 次按钮 */
.btn-secondary {
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  color: #1aad19;
  background-color: #fff;
  border: 1px solid #1aad19;
  border-radius: 12rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 20rpx;
}

/* 点击效果 */
.btn-primary:active,
.btn-secondary:active {
  opacity: 0.8; /* 点击时的透明效果 */
}
