/* pages/usr/mydata.wxss */
/* 主容器 */
.me, .login-ok {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f7f7f7;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05); /* 微妙的阴影 */
  width: 90%;
  margin: 60rpx auto;
}

/* 未登录按钮 */
.btn-login, .btn-register {
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  border-radius: 12rpx;
}

.btn-login {
  color: #fff;
  background-color: #1aad19; /* 微信绿色 */
  box-shadow: 0 4rpx 8rpx rgba(26, 173, 25, 0.3); /* 轻微阴影 */
}

.btn-register {
  color: #1aad19;
  background-color: #fff;
  border: 1px solid #1aad19;
  margin-top: 15rpx;
  box-shadow: 0 4rpx 8rpx rgba(26, 173, 25, 0.2);
}

/* 登录成功界面 */
/* 统一容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background-color: #f6f8fa;  /* 浅灰色背景，更贴合飞书风格 */
  min-height: 100vh;
}

/* 成功提示 */
.success-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #0061F2;  /* 飞书蓝色 */
  margin-bottom: 30rpx;
}

/* 用户信息卡片 */
.user-info {
  margin-top: 40rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 8rpx;  /* 圆角效果 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);  /* 柔和阴影 */
  width: 85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

/* 账号标签 */
.user-label {
  font-size: 28rpx;
  color: #A3A3A3;  /* 浅灰色字体 */
  font-weight: 400;
}

/* 用户名 */
.user-name {
  font-size: 28rpx;
  color: #333;  /* 深色字体 */
  font-weight: 500;
}

/* 操作按钮 */
.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* 按钮样式 */
.mainpage-btn,
.logout-btn {
  width: 80%;
  padding: 15rpx;
  margin: 12rpx 0;
  border-radius: 6rpx;
  font-size: 30rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;  /* 添加平滑过渡 */
}

.mainpage-btn {
  background-color: #0061F2;  /* 飞书蓝色 */
  color: #ffffff;
  border: none;
}

.logout-btn {
  background-color: #616060;  /* 红色按钮，表示退出 */
  color: #ffffff;
  border: none;
}

.mainpage-btn:hover,
.logout-btn:hover {
  opacity: 0.8;  /* 悬停时透明度变化，增加交互感 */
}

