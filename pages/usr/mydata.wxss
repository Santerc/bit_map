/* pages/me/me.wxss */

/* 页面背景 */
.me, .login-ok {
  padding: 20px;
  background-color: #f8f8f8;  /* 浅灰背景，简洁且清爽 */
  height: 100%;
}

/* 登录和注册按钮样式 */
.login-btn, .register-btn {
  width: 100%;
  padding: 15px;
  margin: 10px 0;
  border-radius: 30px;
  font-size: 16px;
  background-color: #1e90ff;
  color: white;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.register-btn {
  background-color: #f1f1f1;
  color: #333;
  border: 1px solid #ddd;
}

/* 登录成功页面样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.success-text {
  font-size: 18px;
  color: #333;
  font-weight: 500;
  margin-bottom: 20px;
}

/* 用户信息展示样式 */
.user-info {
  margin-bottom: 30px;
  font-size: 16px;
  color: #333;
}

.user-label {
  font-weight: bold;
}

/* 头像展示 */
.avatar-container {
  text-align: center;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #ddd; /* 头像边框 */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.upload-avatar-btn {
  margin-top: 10px;
  padding: 10px 20px;
  font-size: 14px;
  background-color: #f1f1f1;
  border: 1px solid #ddd;
  color: #333;
  border-radius: 20px;
  transition: background-color 0.3s;
}

.upload-avatar-btn:hover {
  background-color: #e0e0e0;  /* 鼠标悬停效果 */
}

/* 操作按钮区 */
.button-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 40px;
}

.mainpage-btn, .logout-btn {
  padding: 10px 20px;
  font-size: 16px;
  border-radius: 25px;
  background-color: #1e90ff;
  color: white;
  flex: 1;
  margin: 0 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.mainpage-btn:hover, .logout-btn:hover {
  background-color: #0078d4;
}
