/* 页面整体布局 */
.me, .login-ok {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 登录与注册按钮区 */
.auth-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;  /* 按钮之间的间距 */
}

/* 登录按钮样式 */
.login-btn {
  width: 200rpx;
  height: 60rpx;
  font-size: 28rpx;
  background-color: #4A90E2;
  color: white;
  border-radius: 8rpx;
  margin-top: 50rpx;
}

/* 注册按钮样式 */
.register-btn {
  width: 200rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #4A90E2;
  border: 1px solid #4A90E2;
  border-radius: 8rpx;
}

/* 登录成功区域 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

/* 登录成功文字 */
.success-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 20rpx;
}

/* 用户信息展示 */
.user-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.avatar-container {
  margin-right: 20rpx;  /* 头像和用户名之间的间距 */
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #e1e1e1;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-label {
  font-weight: bold;
  margin-bottom: 5rpx;
}

.user-name {
  font-size: 28rpx;
}

/* 上传头像按钮 */
.upload-avatar-btn {
  margin-top: 20rpx;
  background-color: #f0f0f0;
  color: #333;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  border-radius: 6rpx;
  border: none;
  margin-top: 10rpx;
}

/* 操作按钮区 */
.button-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 50rpx;
}

.mainpage-btn, .logout-btn {
  width: 250rpx;
  height: 50rpx;
  font-size: 28rpx;
  border-radius: 6rpx;
}

.mainpage-btn {
  background-color: #4A90E2;
  color: white;
}

.logout-btn {
  background-color: #f5f5f5;
  color: #4A90E2;
  border: 1px solid #4A90E2;
}
